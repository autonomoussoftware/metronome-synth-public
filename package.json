{
  "name": "vesper-synth",
  "version": "0.0.1",
  "description": "Vesper Synth",
  "license": "MIT",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "solhint": "solhint './contracts/**/*.sol'",
    "solhint:fix": "prettier --write 'contracts/**/*.sol'",
    "lint": "eslint --cache ./test/*",
    "lint:fix": "eslint --cache --fix ./test --ext .ts",
    "clean": "hardhat clean",
    "compile": "hardhat compile",
    "precoverage": "hardhat typechain",
    "coverage": "hardhat coverage",
    "postcoverage": "istanbul check-coverage --statements 90 --branches 75 --functions 88 --lines 92",
    "deploy": "hardhat deploy-pool",
    "pretest": "hardhat typechain",
    "test": "hardhat test --parallel",
    "verify": "hardhat etherscan-verify",
    "size-contract": "hardhat size-contracts",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@defi-wonderland/smock": "^2.0.7",
    "@ethersproject/hardware-wallets": "^5.6.0",
    "@nomiclabs/hardhat-ethers": "^2.0.4",
    "@nomiclabs/hardhat-etherscan": "^3.0.3",
    "@nomiclabs/hardhat-waffle": "^2.0.3",
    "@typechain/ethers-v5": "^7.2.0",
    "@typechain/hardhat": "^2.3.1",
    "@types/chai": "^4.3.0",
    "@types/lodash": "^4.14.181",
    "@types/mocha": "^9.1.0",
    "@types/node": "^17.0.23",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "chai": "^4.3.6",
    "chai-almost": "^1.0.1",
    "compare-versions": "^4.1.3",
    "dotenv": "^16.0.0",
    "eslint": "^7.32.0",
    "eslint-config-bloq": "^3.1.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jsdoc": "^37.9.5",
    "eslint-plugin-mocha": "^10.0.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "eslint-plugin-promise": "^5.2.0",
    "eslint-plugin-require-path-exists": "^1.1.9",
    "ethereum-waffle": "^3.4.4",
    "ethers": "^5.5.4",
    "hardhat": "^2.9.0",
    "hardhat-contract-sizer": "^2.5.1",
    "hardhat-deploy": "^0.11.4",
    "hardhat-gas-reporter": "^1.0.8",
    "hardhat-log-remover": "^2.0.2",
    "hardhat-spdx-license-identifier": "^2.0.3",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.7",
    "lodash": "^4.17.21",
    "p-series": "^3.0.0",
    "prettier-plugin-solidity": "^1.0.0-beta.19",
    "solhint": "^3.3.6",
    "solhint-plugin-prettier": "^0.0.5",
    "solidity-coverage": "^0.7.18",
    "ts-generator": "^0.1.1",
    "ts-node": "^10.7.0",
    "typechain": "^5.2.0",
    "typescript": "^4.6.2"
  },
  "engines": {
    "node": ">=12.0.0",
    "npm": ">=7.0.0"
  }
}
